generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String
  email     String?  @unique
  phone     String?  @unique
  password  String

  avatarUrl String?               // 头像 URL（可为空）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now()) // 加默认值，迁移时可回填老数据
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  email     String
  createdAt DateTime @default(now())
  expiresAt DateTime
}
